<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepak.indiaquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.android.quizapp.MainActivity">

        <TextView
            style="@style/TestViewStyle"
            android:text="1.Who is India's first Prime Minister?" />

        <RadioGroup
            android:id="@+id/rd1Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/a1_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr APJ Abdul Kalam"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/b1_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr Radha Krishnan"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/c1_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaharlal Nehru"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/d1_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Atal Bihari Vajpaye"
                android:textAppearance="?android:textAppearanceSmall" />
        </RadioGroup>

        <TextView
            style="@style/TestViewStyle"
            android:text="2.which city is the finacial capital of India" />

        <CheckBox
            android:id="@+id/aa_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Mumbai"
            android:textAppearance="?android:textAppearanceSmall" />

        <CheckBox
            android:id="@+id/bb_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Bombay"
            android:textAppearance="?android:textAppearanceSmall" />

        <CheckBox
            android:id="@+id/cc_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Chennai"
            android:textAppearance="?android:textAppearanceSmall" />

        <CheckBox
            android:id="@+id/dd_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:onClick="onCheckboxClicked"
            android:text="Banglore"
            android:textAppearance="?android:textAppearanceSmall" />


        <TextView
            style="@style/TestViewStyle"
            android:text="3.What type of government dose India have" />

        <EditText
            android:id="@+id/text_Edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="ruled by every citizen"
            android:inputType="text"
            android:text="" />

        <TextView
            style="@style/TestViewStyle"
            android:text="4.How many wars has India fought after independence" />

        <RadioGroup
            android:id="@+id/rd2Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/a_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/b_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/c_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/d_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="5"
                android:textAppearance="?android:textAppearanceSmall" />
        </RadioGroup>


        <TextView
            style="@style/TestViewStyle"
            android:text="5.Who is India's first President?" />

        <RadioGroup
            android:id="@+id/rd3Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/a2_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rajendra Prasad"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/b2_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr Radha Krishnan"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/c2_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaharlal Nehru"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/d2_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Prathiba Patil"
                android:textAppearance="?android:textAppearanceSmall" />
        </RadioGroup>


        <TextView
            style="@style/TestViewStyle"
            android:text="6.Who is India's first Female President?" />

        <RadioGroup
            android:id="@+id/rd4Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/a3_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr APJ Abdul Kalam"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/b3_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indira Gandhi"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/c3_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prathiba Patil"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/d3_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Sonya Gandhi"
                android:textAppearance="?android:textAppearanceSmall" />
        </RadioGroup>

        <TextView
            style="@style/TestViewStyle"
            android:text="7.who is the founder of Banglore city ?" />

        <RadioGroup
            android:id="@+id/rd5Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/a4_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jhansi rani Lakshmi Bai"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/b4_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kempe Gowda"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/c4_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kittur RaniChennama"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/d4_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Vera Ballala the second"
                android:textAppearance="?android:textAppearanceSmall" />
        </RadioGroup>

        <TextView
            style="@style/TestViewStyle"
            android:text="8.Who is called the father of the nation " />

        <RadioGroup
            android:id="@+id/rd6Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/a5_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr APJ Abdul Kalam"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/b5_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr Radha Krishnan"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/c5_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaharlal Nehru"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/d5_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Mahathma Gandhi"
                android:textAppearance="?android:textAppearanceSmall" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="submitAnswer"
                android:text="Submit"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:onClick="resetQuestions"
                android:text="reset"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Your Score"
            android:textAllCaps="true"
            android:textColor="#616161"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quizScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="220dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="25sp" />


    </LinearLayout>


</ScrollView>